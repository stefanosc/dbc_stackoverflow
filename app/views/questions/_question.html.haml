.row
  .col-xs-3.col-sm-2.col-md-2.question-vote-container
    .vote.well(id= "question#{question.id}")= question.votes
    = link_to vote_question_path(question, vote: 1, format: :json),method: :patch, remote: true, class: "question-vote up" do
      %i.glyphicon.glyphicon-thumbs-up
    = link_to vote_question_path(question, vote: -1, format: :json),method: :patch, remote: true, class: "question-vote down" do
      %i.glyphicon.glyphicon-thumbs-down
  .col-sm-10.col-md-8.col-xs-9.col-lg-7
    %h1= question.title
    = question.content
.row
  .col-xs-offset-3.col-sm-offset-2
    = link_to "edit", edit_question_path(question), class: "btn btn-default edit-question"
    = link_to "delete", question_path(question), method: :delete, class: "btn btn-default delete-question"